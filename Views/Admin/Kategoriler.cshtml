@model IEnumerable<Kategoriler>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Kategoriler</h2>
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/admin/kategori/ekle">Ekle</a>
    </li>
</ol>
<div class="col-md-4">
    <form action="/admin/kategori/ekle" method="post">
        <div class="form-group">
            <label for="Kategori" class="control-label"> Kategori</label>
            <input name="Kategori" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </form>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Kategoriler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th>Olay</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Kategori</th>
                        <th>Olay</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID </td>
                            <td>@item.Kategori</td>
                            <td><a href="/admin/kategori/duzenle/@item.ID"><span class="fa fa-edit"></span></a>|<a href="/admin/kategori/sil/@item.ID"><span class="fa fa-trash"></span></a></td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted"></div>
</div>
