@model Kullanicilar
@{
    ViewData["Title"] = "KullaniciDuzenle";
    Layout = "~/Views/Shared/_Admin.cshtml";
    List<Yetkiler> yetki = ViewBag.Yetkiler;
}

<h2>Kullanıcı Düzenle</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/admin/kullanici/duzenle" method="post">

            <div class="form-group">
                <input type="hidden" name="ID" value="@Model.ID" />
                <label for="KullaniciAdi" class="control-label">Kullanıcı Adı</label>
                <input name="KullaniciAdi" value="@Model.KullaniciAdi" class="form-control" />

            </div>
            <div class="form-group">
                <label for="Sifre" class="control-label">Şifre</label>
                <input name="Sifre" class="form-control" />

            </div>
            <div class="form-group">
                <label for="Mail" class="control-label">Mail</label>
                <input name="Mail" value="@Model.Mail" class="form-control" />

            </div>
            <div class="form-group">
                <label for="YetkiID" class="control-label">Yetki</label>
                <select name="YetkiID" class="form-control">
                    @foreach (var item in yetki)
                    {
                        <option value="@item.ID">@item.Yetki</option>
                     }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Değiştir" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/admin/kullanicilar">Kullanıcılar Listesi</a>
</div>