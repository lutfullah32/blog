@model IEnumerable<Yetkiler>
@{
    ViewData["Title"] = "Yetkiler";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Yetkiler</h2>

<div class="col-md-4">
    <form action="/admin/yetki/ekle" method="post">
        <div class="form-group">
            <label for="Yetki" class="control-label"> Yetki</label>
            <input name="Yetki" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Ekle" class="btn btn-default" />
        </div>
    </form>
</div>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Yetkiler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Yetki</th>
                        <th>Olay</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Yetki</th>
                        <th>Olay</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID </td>
                            <td>@item.Yetki</td>
                            <td><a href="/admin/yetki/duzenle/@item.ID"><span class="fa fa-edit"></span></a>|<a href="/admin/yetki/sil/@item.ID"><span class="fa fa-trash"></span></a></td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted"></div>
</div>
