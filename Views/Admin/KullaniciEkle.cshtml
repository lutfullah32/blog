@model List<Yetkiler>
@{
    ViewData["Title"] = "KullaniciEkle";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2>Kullanıcı Ekle</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/admin/kullanici/ekle" method="post">
            
            <div class="form-group">
                <label for="KullaniciAdi" class="control-label">Kullanıcı Adı</label>
                <input name="KullaniciAdi" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="Sifre" class="control-label">Şifre</label>
                <input name="Sifre" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="Mail" class="control-label">Mail</label>
                <input name="Mail" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="YetkiID" class="control-label">Yetki</label>
                <select name="YetkiID" class="form-control">
                    @foreach (var item in Model)
                     {
                        <option value="@item.ID">@item.Yetki</option>
                     }
                </select>
            </div>
            <div class="form-group">
                <label for="UyelikTarihi" class="control-label"></label>
                <input name="UyelikTarihi" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/admin/kullanicilar">Kullanıcılar Listesi</a>
</div>

