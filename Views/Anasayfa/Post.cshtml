@model SadecePost
@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/kategori/@Model.kategoriid">@Model.kategori</a>
    </li>
    <li class="breadcrumb-item active">@Model.baslik</li>
</ol>
<div class="row">
    <div class="col-lg-1"></div>
    <div class="col-lg-10">
        <h4>@Model.baslik</h4>
        <p>@Model.icerik</p>
    </div>
</div>